<h1>Editing Book</h1>

<%= form_with model: @book do |f| %>

<h2>Title</h2>
<%= f.text_field :title %>

<h2>Body</h2>
<%= f.text_area :body %>

<br>
<%= f.submit 'Update Book' %>

<% end %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>error
    <ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
    </ul>
<% end %>

<%= link_to "Show", book_path %>
|
<%= link_to "Back", books_path %>
